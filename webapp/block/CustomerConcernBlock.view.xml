<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" controllerName="WarrantyClaim_MockUp.block.CustomerConcernBlockController">
	<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="__form0" objectBindings="{WarrantyClaim>/}">
		<sap.ui.layout.form:layout>
	    	<sap.ui.layout.form:ResponsiveGridLayout/>
	    </sap.ui.layout.form:layout>	
		<sap.ui.layout.form:formContainers>
			<sap.ui.layout.form:FormContainer id="__container0" title="Customer Concern" >
				<sap.ui.layout.form:formElements>
					<sap.ui.layout.form:FormElement id="__element0" >
						<sap.ui.layout.form:fields>
							<l:Grid>
								<l:content>							
									<l:VerticalLayout width="100%">
										<l:layoutData>
											<l:GridData span="L8"/>
										</l:layoutData>
										<Label id="CustomerConcern_label" text="Customer Concern" visible="false"/>
										<TextArea 
											id="CustomerConcern" 
											rows="10" 
											cols="120" 
											placeholder="Enter Details of Customer Concern" 
											value="{WarrantyClaim>CustomerConcern}"
											editable="{WarrantyClaim>CanEdit}"
											valueState="{ parts: [{path: 'WarrantyClaim>CustomerConcern'}, {path: 'WarrantyClaim>ClaimTypeGroup'}], formatter: '.valueStateFormatter.customerConcern'}"
										/>
									</l:VerticalLayout>
									<l:VerticalLayout width="100%">
										<l:layoutData>
											<l:GridData span="L4"/>
										</l:layoutData>
										<Label 
											id="symptomCodeL1_label" 
											text="Symptom Code L1" 
											labelFor="symptomCodeL1" 
											required="{= ${WarrantyClaim>ClaimTypeGroup} === 'NORMAL' || ${WarrantyClaim>ClaimTypeGroup} === 'GOODWILL' }"
										/>
										<ComboBox
											id="symptomCodeL1"
											width="100%"
											editable="{WarrantyClaim>CanEdit}"
											items="{
												path: 'SymptomCodes>/'
											}"
											loadItems="readSymptomCatalog"
											selectionChange="onSymptomCodeSelectedL1"
											selectedKey="{ViewHelper>/warrantyUI/symptomCodeL1}"
											valueState="{ parts: [{path: 'ViewHelper>/warrantyUI/symptomCodeL1'}, {path: 'WarrantyClaim>ClaimTypeGroup'}], formatter: '.valueStateFormatter.symptomCodeL1'}"
										>
											<core:ListItem key="{SymptomCodes>code}" text="{SymptomCodes>text}"/>
										</ComboBox>	
										<Label 
											id="symptomCodeL2_label" 
											text="Symptom Code L2" 
											labelFor="symptomCodeL2" 
											required="{= ${WarrantyClaim>ClaimTypeGroup} === 'NORMAL' || ${WarrantyClaim>ClaimTypeGroup} === 'GOODWILL' }"
										/>
										<ComboBox
											id="symptomCodeL2"
											required="{= ${WarrantyClaim>ClaimTypeGroup} === 'NORMAL' }"
											width="100%"
											editable="{WarrantyClaim>CanEdit}"
											items="{
												path: 'SymptomCodesHelper>/SymptomsL2'
											}"
											selectionChange="onSymptomCodeSelectedL2"
											selectedKey="{ViewHelper>/warrantyUI/symptomCodeL2}"
											valueState="{ parts: [{path: 'ViewHelper>/warrantyUI/symptomCodeL2'}, {path: 'WarrantyClaim>ClaimTypeGroup'}], formatter: '.valueStateFormatter.symptomCodeL2'}"
										>
											<core:ListItem key="{SymptomCodesHelper>code}" text="{SymptomCodesHelper>text}"/>
										</ComboBox>	
										<Label 
											id="SymptomCode_label" 
											text="Symptom Code L3" 
											labelFor="SymptomCode" 
											required="{= ${WarrantyClaim>ClaimTypeGroup} === 'NORMAL' || ${WarrantyClaim>ClaimTypeGroup} === 'GOODWILL' }"
										/>
										<ComboBox
											id="SymptomCode"
											width="100%"
											editable="{WarrantyClaim>CanEdit}"
											items="{
												path: 'SymptomCodesHelper>/SymptomsL3'
											}"
											selectedKey="{WarrantyClaim>SymptomCode}"
											valueState="{ parts: [{path: 'WarrantyClaim>SymptomCode'}, {path: 'WarrantyClaim>ClaimTypeGroup'}], formatter: '.valueStateFormatter.symptomCodeL3'}"
										>
											<core:ListItem key="{SymptomCodesHelper>code}" 
												text="{SymptomCodesHelper>text} ({=${SymptomCodesHelper>code}.substr(8,5)})"/>
										</ComboBox>	
									</l:VerticalLayout>									
								</l:content>	
							</l:Grid>
						</sap.ui.layout.form:fields>
					</sap.ui.layout.form:FormElement>
				</sap.ui.layout.form:formElements>
			</sap.ui.layout.form:FormContainer>
		</sap.ui.layout.form:formContainers>
	</sap.ui.layout.form:Form>
</mvc:View>