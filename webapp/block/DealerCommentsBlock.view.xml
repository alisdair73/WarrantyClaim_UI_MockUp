<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns="sap.m" xmlns:l="sap.ui.layout" controllerName="WarrantyClaim_MockUp.block.DealerCommentsBlockController">
	<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="__form0" objectBindings="{WarrantyClaim>/}">
		<sap.ui.layout.form:layout>
	    	<sap.ui.layout.form:ResponsiveGridLayout/>
	    </sap.ui.layout.form:layout>	
		<sap.ui.layout.form:formContainers>
			<sap.ui.layout.form:FormContainer id="__container0" title="Dealer Remark" >
				<sap.ui.layout.form:formElements>
					<sap.ui.layout.form:FormElement id="__element0" >
						<sap.ui.layout.form:fields>
							<l:Grid>
								<l:content>							
									<l:VerticalLayout width="100%">
										<l:layoutData>
											<l:GridData span="L8"/>
										</l:layoutData>
										<Label 
											id="DealerComments_label" 
											text="Dealer Comments" 
											visible="false"
										/>
										<TextArea 
										    id="DealerComments"
											rows="10" 
											cols="120" 
											placeholder="Dealer Comments" 
											value="{WarrantyClaim>DealerComments}"
											editable="{WarrantyClaim>CanEdit}"	
											valueState="{ parts: [{path: 'WarrantyClaim>DealerComments'}, {path: 'WarrantyClaim>ClaimTypeGroup'}], formatter: '.valueStateFormatter.dealerComments'}"
										/>
									</l:VerticalLayout>
									<l:VerticalLayout width="100%">
										<l:layoutData>
											<l:GridData span="L4"/>
										</l:layoutData>
										<Label 
											id="defectCodeL1_label" 
											text="Defect Code L1" 
											labelFor="defectCodeL1" 
											required="{= ${WarrantyClaim>ClaimTypeGroup} === 'NORMAL' || ${WarrantyClaim>ClaimTypeGroup} === 'GOODWILL' }"
										/>
										<ComboBox
											id="defectCodeL1"
											width="100%"
											editable="{WarrantyClaim>CanEdit}"
											items="{
												path: 'DefectCodes>/'
											}"
											loadItems="readDefectCatalog"
											selectionChange="onDefectCodeSelectedL1"
											selectedKey="{ViewHelper>/warrantyUI/defectCodeL1}"
											valueState="{ parts: [{path: 'ViewHelper>/warrantyUI/defectCodeL1'}, {path: 'WarrantyClaim>ClaimTypeGroup'}], formatter: '.valueStateFormatter.defectCodeL1'}"
										>
											<core:ListItem key="{DefectCodes>code}" text="{DefectCodes>text}"/>
										</ComboBox>	
										<Label 
											id="DefectCode_label" 
											text="Defect Code L2" 
											labelFor="defectCodeL2" 
											required="{= ${WarrantyClaim>ClaimTypeGroup} === 'NORMAL' || ${WarrantyClaim>ClaimTypeGroup} === 'GOODWILL' }"
										/>
										<ComboBox
											id="DefectCode"
											required="true"
											width="100%"
											editable="{WarrantyClaim>CanEdit}"
											items="{
												path: 'DefectCodesHelper>/DefectsL2'
											}"
											selectedKey="{WarrantyClaim>DefectCode}"
											valueState="{ parts: [{path: 'WarrantyClaim>DefectCode'}, {path: 'WarrantyClaim>ClaimTypeGroup'}], formatter: '.valueStateFormatter.defectCodeL2'}"
										>
											<core:ListItem key="{DefectCodesHelper>code}" 
												text="{DefectCodesHelper>text} ({=${DefectCodesHelper>code}.substr(4,5)})"/>
										</ComboBox>	
									</l:VerticalLayout>									
								</l:content>	
							</l:Grid>
						</sap.ui.layout.form:fields>
					</sap.ui.layout.form:FormElement>
				</sap.ui.layout.form:formElements>
			</sap.ui.layout.form:FormContainer>
		</sap.ui.layout.form:formContainers>
	</sap.ui.layout.form:Form>
</mvc:View>