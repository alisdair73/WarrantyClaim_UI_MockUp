<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="WarrantyClaim_MockUp.block.LONDetailsBlockController">
	<Table 
		items="{WarrantyClaim>/Labour}" 
		id="LONTable" 
	>
		<headerToolbar>
			<Toolbar>
				<Title text="Labour Operation Numbers" level="H2"/>
				<ToolbarSpacer/>
				<Button 
					text="Select LON" 
					icon="sap-icon://task" 
					press="onCheckLON" 
					enabled="{= ${WarrantyClaim>/Parts/0/PartNumber} !== '' &amp;&amp; ${WarrantyClaim>/VIN} !== ''}"
					visible="{= ${WarrantyClaim>/CanEdit} &amp;&amp; ${WarrantyClaim>/ClaimTypeGroup} !== 'RECALL'}"
				/>
			</Toolbar>
		</headerToolbar>
	    <items>
	        <ColumnListItem id="__item0" vAlign="Middle">
	            <cells>
	                <Text text="{WarrantyClaim>ItemKey}" />
	                <Text text="{WarrantyClaim>Description}" />
	                <Text text="{WarrantyClaim>Quantity}" />
	                <Button 
	                	icon="sap-icon://delete" 
	                	press="deleteLON" 
	                	visible="{= ${WarrantyClaim>/CanEdit} &amp;&amp; ${WarrantyClaim>/ClaimTypeGroup} !== 'RECALL'}"
	                />
	            </cells>
	        </ColumnListItem>
	    </items>
	    <columns>
	        <Column id="__column0" width="30em">
	            <header>
	                <Label text="LON" />
	            </header>
	        </Column>
	        <Column id="__column1" width="30em">
	            <header>
	                <Label text="Description" />
	            </header>
	        </Column>
	        <Column id="__column2" width="5em">
	            <header>
	                <Label text="Time" />
	            </header>
	        </Column>
	        <Column id="__column3" width="5em" hAlign="End"/>
	     </columns>
	 </Table>
</mvc:View>