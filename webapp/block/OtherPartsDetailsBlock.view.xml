<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core"
 xmlns:l="sap.ui.layout" controllerName="WarrantyClaim_MockUp.block.OtherPartsDetailsBlockController">
	<Table items="{WarrantyClaim>/Parts}" id="partsTable" >
		<headerToolbar>
			<Toolbar>
				<Title text="Other Parts" level="H2"/>
				<ToolbarSpacer/>
				<Button text="Add more parts" icon="sap-icon://add" press="addItem" visible="{WarrantyClaim>/CanEdit}"/>
			</Toolbar>
		</headerToolbar>
	    <items>
	        <ColumnListItem id="__item0" vAlign="Middle">
	        	<customData>
    				<core:CustomData key="isMCPN" value="{= ${WarrantyClaim>isMCPN}? 'X':''}" writeToDom="true"/>
				</customData>
	            <cells>
	            	<Text text="{WarrantyClaim>PartNumber}"/>
	                <Text text="{WarrantyClaim>Description}"/>
	                <l:HorizontalLayout>
	                	<Text 
	                		text="{
	                			path: 'WarrantyClaim>Quantity',							
	                			type: 'sap.ui.model.type.Float',
								formatOptions: {
									minFractionDigits: 3,
									maxFractionDigits: 3
								}
							}" 
							visible= "{= ${WarrantyClaim>isMCPN}}"
						/>
	                	<Input
	                		type="Number"
	                		value="{
								path: 'WarrantyClaim>Quantity',
								type: 'sap.ui.model.type.Float',
								formatOptions: {
									minFractionDigits: 3,
									maxFractionDigits: 3
								}
							}" 
							editable="{WarrantyClaim>/CanEdit}"
	                		visible="{= !${WarrantyClaim>isMCPN} }"
	            		/>
	        		</l:HorizontalLayout>
	                <l:HorizontalLayout>
	                	<core:Icon src="sap-icon://broken-link" visible="{= !!${WarrantyClaim>isMCPN} }" tooltip="Main Causal Part Number"/>
	                	<Button icon="sap-icon://edit" press="editItem" visible="false"/>
	                	<Button icon="sap-icon://delete" press="deleteItem" visible="{= ${WarrantyClaim>/CanEdit} &amp;&amp; !${WarrantyClaim>isMCPN} }"/>
	                </l:HorizontalLayout>
	            </cells>
	        </ColumnListItem>
	    </items>		
	    <columns>
	        <Column id="__column0" width="25em">
	            <header>
	                <Label text="Part No." id="__label0"/>
	            </header>
	        </Column>
	        <Column id="__column1" width="25em">
	            <header>
	                <Label text="Description" id="__label1"/>
	            </header>
	        </Column>
	        <Column id="__column2" width="10em">
	            <header>
	                <Label text="Qty" id="__label2"/>
	            </header>
	        </Column>
<!--	    <Column id="__column3">
	            <header>
	                <Label text="Part Requested" id="__label3"/>
	            </header>
	        </Column>  -->
	        <Column id="__column4" width="7em" hAlign="End"/>
	     </columns>
	 </Table>
	 <CheckBox text="Installed by dealer?" editable="{WarrantyClaim>/CanEdit}" visible="{= ${WarrantyClaim>/ClaimTypeGroup} === 'PARTS' }"/>
</mvc:View>