<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" xmlns:l="sap.ui.layout" controllerName="WarrantyClaim_MockUp.block.SubletDetailsBlockController">
	<Table items="{WarrantyClaim>/Sublet}" id="__table0">
		<headerToolbar>
			<Toolbar>
				<Title text="Sublet Details" level="H2"/>
				<ToolbarSpacer/>
				<Button text="Add Sublet" icon="sap-icon://add" press="addSublet"/>
			</Toolbar>
		</headerToolbar>
	    <items>
	        <ColumnListItem id="__item0">
	            <cells>
	                <Text text="{WarrantyClaim>ItemKey}" id="__text5"/>
	                <Text text="{WarrantyClaim>Invoice}" id="__text7"/>
	                <Text text="{WarrantyClaim>BusinessName}" id="__text8"/>
	                <Text text="{WarrantyClaim>Quantity}" id="__text9"/>
	                <Text text="{WarrantyClaim>Description}" id="__text6"/>
	                <l:HorizontalLayout>
	                	<Button icon="sap-icon://edit" press="editSublet"/>
	                	<Button icon="sap-icon://delete" press="deleteSublet"/>
	                </l:HorizontalLayout>
	            </cells>
	        </ColumnListItem>
	    </items>
	    <columns>
	        <Column id="__column0" width="15em">
	            <header>
	                <Label text="Code" id="__label0"/>
	            </header>
	        </Column>
	        <Column id="__column1" width="10em">
	            <header>
	                <Label text="Invoice" id="__label1"/>
	            </header>
	        </Column>
	        <Column id="__column2" width="15em">
	            <header>
	                <Label text="Business Name" id="__label2"/>
	            </header>
	        </Column>
	        <Column id="__column3" width="5em">
	            <header>
	                <Label text="Costs" id="__label3"/>
	            </header>
	        </Column>
	        <Column id="__column4" width="15em">
	            <header>
	                <Label text="Description" id="__label4"/>
	            </header>
	        </Column>
	        <Column id="__column5" width="7em" hAlign="End"/>
	     </columns>
	 </Table>
</mvc:View>