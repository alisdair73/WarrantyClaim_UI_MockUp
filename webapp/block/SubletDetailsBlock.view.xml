<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" xmlns:l="sap.ui.layout" controllerName="WarrantyClaim_MockUp.block.SubletDetailsBlockController">
	<CheckBox 
		selected="{WarrantyClaim>/PartsInstalledByDealer}"
		text="Installed by Dealer?" 
		editable="{WarrantyClaim>/CanEdit}" 
		visible="{= ${WarrantyClaim>/ClaimTypeGroup} === 'PARTS' }"
	/>
	<Table 
		id="SubletTable"
		items="{WarrantyClaim>/Sublet}" 
		showOverlay="{= ${WarrantyClaim>/ClaimTypeGroup} === 'PARTS' &amp;&amp; !${WarrantyClaim>/PartsInstalledByDealer}}"
	>
		<headerToolbar>
			<Toolbar>
				<Title text="Sublet Details" level="H2"/>
				<ToolbarSpacer/>
				<Button text="Add Sublet" icon="sap-icon://add" press="addSublet" visible="{WarrantyClaim>/CanEdit}"/>
			</Toolbar>
		</headerToolbar>
	    <items>
	        <ColumnListItem id="__item0" vAlign="Middle">
	            <cells>
	                <Text text="{WarrantyClaim>ItemKey}"/>
	                <Text text="{WarrantyClaim>Invoice}"/>
	                <Text text="{WarrantyClaim>BusinessName}"/>
	                <Text 
	                	text="{
    						parts: [
        						{path: 'WarrantyClaim>Quantity'}, 
        						{path: 'WarrantyClaim>ClaimCurrency'}
    						],
    						type: 'sap.ui.model.type.Currency',
    						formatOptions: {
        						showMeasure: true
							}
						}"
	                />
	                <Text text="{WarrantyClaim>Description}"/>
	                <l:HorizontalLayout>
	                	<Button icon="sap-icon://edit" press="editSublet" visible="{WarrantyClaim>/CanEdit}"/>
	                	<Button 
	                		icon="sap-icon://delete" 
	                		press="deleteSublet" 
	                		visible="{= ${WarrantyClaim>/CanEdit} &amp;&amp; ${WarrantyClaim>/ClaimTypeGroup} !== 'RECALL'}"
	                	/>
	                </l:HorizontalLayout>
	            </cells>
	        </ColumnListItem>
	    </items>
	    <columns>
	        <Column id="__column0" width="15em">
	            <header>
	                <Label text="Code" id="__label0"/>
	            </header>
	        </Column>
	        <Column id="__column1" width="10em">
	            <header>
	                <Label text="Invoice" id="__label1"/>
	            </header>
	        </Column>
	        <Column id="__column2" width="15em">
	            <header>
	                <Label text="Business Name" id="__label2"/>
	            </header>
	        </Column>
	        <Column id="__column3" width="5em">
	            <header>
	                <Label text="Costs" id="__label3"/>
	            </header>
	        </Column>
	        <Column id="__column4" width="15em">
	            <header>
	                <Label text="Description" id="__label4"/>
	            </header>
	        </Column>
	        <Column id="__column5" width="7em" hAlign="End"/>
	     </columns>
	 </Table>
</mvc:View>