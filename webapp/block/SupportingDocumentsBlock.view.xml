<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="WarrantyClaim_MockUp.block.SupportingDocumentsBlockController">
	<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" objectBindings="{WarrantyClaim>/}">
		<sap.ui.layout.form:layout>
	    	<sap.ui.layout.form:ResponsiveGridLayout/>
	    </sap.ui.layout.form:layout>
		<sap.ui.layout.form:formContainers>
			<sap.ui.layout.form:FormContainer>
				<sap.ui.layout.form:formElements>
					<sap.ui.layout.form:FormElement>
						<sap.ui.layout.form:fields>
							<l:VerticalLayout>
								<UploadCollection
									id="warrantyAttachmentCollectionCreate"
									uploadUrl="/sap/opu/odata/sap/ZWTY_WARRANTY_CLAIMS_SRV/WarrantyClaimSet('Attachment')/Attachments"
									multiple="false"
									visible="{= ${WarrantyClaim>ClaimNumber} === ''}"
									instantUpload="false"
									showSeparators="All"
									uploadEnabled="{WarrantyClaim>CanEdit}"
									uploadComplete="onUploadComplete"
									beforeUploadStarts="onBeforeUploadStarts"
									filenameLengthExceed="onFileSizeExceed"
									change="onChange"
									maximumFileSize="25"
									noDataText="No Attachments"
									items="{path : 'WarrantyClaim>/Attachments'}"
									mode="SingleSelectMaster">
									<toolbar>
										<OverflowToolbar>
											<Title id="attachmentTitleCreate"/>
											<ToolbarSpacer/>
											<UploadCollectionToolbarPlaceholder/>
										</OverflowToolbar>
									</toolbar>
									<items>
										<UploadCollectionItem
											documentId="{WarrantyClaim>DocumentID}"
											fileName="{WarrantyClaim>FileName}"
											mimeType="{WarrantyClaim>MimeType}"
											url="{WarrantyClaim>URL}"
											visibleEdit="false"
											visibleDelete="{WarrantyClaim>/CanEdit}">
										</UploadCollectionItem>
									</items>
								</UploadCollection>	
								<UploadCollection
									id="warrantyAttachmentCollectionMaintain"
									uploadUrl="/sap/opu/odata/sap/ZWTY_WARRANTY_CLAIMS_SRV/WarrantyClaimSet('Attachment')/Attachments"
									multiple="false"
									instantUpload="true"
									showSeparators="All"
									visible="{= ${WarrantyClaim>ClaimNumber} !== ''}"
									fileDeleted="onFileDeleted"
									uploadEnabled="{WarrantyClaim>CanEdit}"
									uploadComplete="onUploadComplete"
									beforeUploadStarts="onBeforeUploadStarts"
									filenameLengthExceed="onFileSizeExceed"
									change="onChange"
									maximumFileSize="25"
									noDataText="No Attachments"
									items="{path : 'WarrantyClaim>/Attachments'}"
									mode="SingleSelectMaster">
									<toolbar>
										<OverflowToolbar>
											<Title id="attachmentTitleMaintain"/>
											<ToolbarSpacer/>
											<UploadCollectionToolbarPlaceholder/>
										</OverflowToolbar>
									</toolbar>
									<items>
										<UploadCollectionItem
											documentId="{WarrantyClaim>DocumentID}"
											fileName="{WarrantyClaim>FileName}"
											mimeType="{WarrantyClaim>MimeType}"
											url="{WarrantyClaim>URL}"
											visibleEdit="false"
											visibleDelete="{WarrantyClaim>/CanEdit}">
										</UploadCollectionItem>
									</items>
								</UploadCollection>	
							</l:VerticalLayout>							
						</sap.ui.layout.form:fields>
					</sap.ui.layout.form:FormElement>
				</sap.ui.layout.form:formElements>
			</sap.ui.layout.form:FormContainer>
		</sap.ui.layout.form:formContainers>
	</sap.ui.layout.form:Form>
</mvc:View>