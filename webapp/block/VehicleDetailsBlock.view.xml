<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" 
	controllerName="WarrantyClaim_MockUp.block.VehicleDetailsBlockController">
	<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="__form0" objectBindings="{WarrantyClaim>/}">
		<sap.ui.layout.form:layout>
	    	<sap.ui.layout.form:ResponsiveGridLayout/>
	    </sap.ui.layout.form:layout>
		<sap.ui.layout.form:formContainers>
			<sap.ui.layout.form:FormContainer title="Vehicle Details">
				<sap.ui.layout.form:formElements>
					<sap.ui.layout.form:FormElement>
						<sap.ui.layout.form:fields>
							<l:Grid defaultSpan="L4 M6 S6">
								<l:content>
								<l:VerticalLayout width="100%">
									<Label text="Dealer Contact" labelFor="dealerContact"/>
									<ComboBox 
										id="dealerContact"
										width="100%"
										showSecondaryValues= "true"
										editable="{WarrantyClaim>CanEdit}"
										items="{
											path: '/EmployeeSet',
											sorter: { path: 'LastName' }
										}"
										selectedKey="{WarrantyClaim>DealerContact}">
										<core:ListItem key="{EmployeeNumber}" text="{FirstName} {LastName}" additionalText = "({EmployeeNumber})"/>
									</ComboBox>		
								</l:VerticalLayout>
								<l:VerticalLayout width="100%">
									<Label text="PWA Number" labelFor="PWANumber"/>
									<ComboBox 
										id="PWANumber"
										width="100%"
										showSecondaryValues= "false"
										editable="{WarrantyClaim>CanEdit}"
										items="{
											path: '/PriorWorkApprovalSet',
											sorter: { path: 'PWANumber' }
										}"
										selectedKey="{WarrantyClaim>AuthorisationNumber}"
										required="{= ${WarrantyClaim>ClaimTypeGroup} === 'GOODWILL' }"
									>
										<core:ListItem key="{PWANumber}" text="{PWANumber} - [{VIN}/{OwnerName}]"/>
									</ComboBox>		
								</l:VerticalLayout>
								<l:VerticalLayout width="100%">
									<Label text="Recall Number" labelFor="recallNumber"/>
									<Input  id="recallNumber" value="{WarrantyClaim>RecallNumber}" 
										editable="{WarrantyClaim>CanEdit}" required="{= ${WarrantyClaim>ClaimTypeGroup} === 'RECALL' }"/>
								</l:VerticalLayout>	
								<l:VerticalLayout width="100%">
									<Label text="{= ${WarrantyClaim>ObjectType} === 'VELO'? 'VIN' : 'Serial Number' }"/>
									<Input  id="VIN" value="{WarrantyClaim>VIN}" editable="{WarrantyClaim>CanEdit}"/>
								</l:VerticalLayout>	
								<l:VerticalLayout width="100%">
									<Label text="Engine Number"/>
									<Input  id="engineNumber" value="{WarrantyClaim>EngineNumber}" editable="{WarrantyClaim>CanEdit}"/>
								</l:VerticalLayout>
								</l:content>
							</l:Grid>
						</sap.ui.layout.form:fields>
					</sap.ui.layout.form:FormElement>
				</sap.ui.layout.form:formElements>
			</sap.ui.layout.form:FormContainer>
		</sap.ui.layout.form:formContainers>
	</sap.ui.layout.form:Form>
</mvc:View>