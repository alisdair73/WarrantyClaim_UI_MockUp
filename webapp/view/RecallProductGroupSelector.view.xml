<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout" 
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="WarrantyClaim_MockUp.controller.RecallProductGroupSelector"
>
	<Table 
		id="recallItems"
		items="{RecallItems>/groupParts}" 
	>
		<columns>
    		<Column hAlign="Left" styleClass="cellBorderRight" width="11rem">
    			<header>
	            	<Label text="Material Number"/>
	            </header>
	        </Column>
    		<Column hAlign="Left" styleClass="cellBorderRight" width="11rem">
    			<header>
	            	<Label text="Description"/>
	            </header>
	        </Column>	        
		</columns>	
		<items>
			<ColumnListItem>
				<cells>
	        		<Text text="{RecallItems>materialNumber}"/>
	        		<Text text="{RecallItems>materialDescription}"/>
	        	</cells>
	        </ColumnListItem>        
	    </items>
	</Table>
</mvc:View>