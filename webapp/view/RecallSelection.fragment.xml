<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog 
	    id="RecallSelectionList"
		noDataText="No Recalls found."
		title="Select Recall"
		search="onRecallSelectionSearch"
		confirm="onRecallSelection"
		items="{
			path: '/RecallSet',
			sorter: { path: 'InternalRecallNumber' }
		}"
		>
		<ColumnListItem>
			<cells>
				<Text text="{ExternalRecallNumber}"/>
				<Text text="{RecallInformation}" />
				<CheckBox selected="{SerialNumberIsMandatory}" editable="false"/>
				<DatePicker 
					displayFormat="dd/MM/yyyy"
					dateValue="{ValidFrom}"
					editable="false"
				/>
				<DatePicker 
					displayFormat="dd/MM/yyyy"
					dateValue="{ValidTo}"
					editable="false"
				/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="External Recall Number" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="Details" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="Serial # Required" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="Valid From" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="Valid To" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>