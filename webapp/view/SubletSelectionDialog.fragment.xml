<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Add Sublet">
		<content>
			<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" objectBindings="{SubletItem>/}">
		    	<sap.ui.layout.form:formContainers>
		        	<sap.ui.layout.form:FormContainer title="Title">
		            	<sap.ui.layout.form:formElements>
		                	<sap.ui.layout.form:FormElement label="Sublet">
		                    	<sap.ui.layout.form:fields>
									<Input width="auto" showValueHelp="true" value="{SubletItem>ItemKey}"
											description="{ViewHelper>/warrantyUI/SubletCodeDescription}" 
											valueHelpOnly="true" valueHelpRequest="showSubletSelector"
									/>
		                    	</sap.ui.layout.form:fields>
		                	</sap.ui.layout.form:FormElement>
		                	<sap.ui.layout.form:FormElement label="Invoice">
		                    	<sap.ui.layout.form:fields>
		                        	<Input width="100%" id="Invoice" value="{SubletItem>Invoice}"/>
		                    	</sap.ui.layout.form:fields>
		                	</sap.ui.layout.form:FormElement>
		                	<sap.ui.layout.form:FormElement label="Business Name">
		                    	<sap.ui.layout.form:fields>
		                        	<Input width="100%" id="BusinessName" value="{SubletItem>BusinessName}"/>
		                    	</sap.ui.layout.form:fields>
		                	</sap.ui.layout.form:FormElement>
		                	<sap.ui.layout.form:FormElement label="Cost">
		                    	<sap.ui.layout.form:fields>
		                        	<Input width="100%" id="Quantity" value="{SubletItem>Quantity}"/>
		                    	</sap.ui.layout.form:fields>
		                	</sap.ui.layout.form:FormElement>
		            	</sap.ui.layout.form:formElements>
		        	</sap.ui.layout.form:FormContainer>
		    	</sap.ui.layout.form:formContainers>
		    	<sap.ui.layout.form:layout>
		        	<sap.ui.layout.form:ResponsiveGridLayout/>
		    	</sap.ui.layout.form:layout>
		    </sap.ui.layout.form:Form>
		</content>
		<buttons>
			<Button text="OK" press="handleOK" icon="sap-icon://accept"/>
			<Button text="Cancel" press="handleClose" icon="sap-icon://sys-cancel"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>