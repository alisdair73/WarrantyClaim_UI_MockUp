<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" xmlns:core="sap.ui.core"
			xmlns:m="sap.m" xmlns:claimBlocks="WarrantyClaim_MockUp.block" xmlns:layout="sap.ui.layout"
			controllerName="WarrantyClaim_MockUp.controller.WarrantyClaimObjectPage"
			xmlns:chart="sap.suite.ui.microchart">
	<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" showFooter="true"
		showHeaderContent="true" busy="{ViewHelper>/busy}" busyIndicatorDelay="{ViewHelper>/delay}">
		<headerTitle>
			<ObjectPageHeader id="warrantyPageHeader"
							  objectTitle="Warranty Claim"
							  isObjectIconAlwaysVisible = "true"
							  headerDesign="Light"
							  objectImageShape="Square"
							  objectImageURI="sap-icon://sales-quote"/>
		</headerTitle>		
		<headerContent>
			<layout:VerticalLayout>
				<layout:layoutData>
					<ObjectPageHeaderLayoutData width="30%" showSeparatorAfter="true" />
				</layout:layoutData>					
				<m:ObjectStatus text="{ViewHelper>/warrantyUI/dealerDescription}"/>
				<m:ObjectAttribute title="Claim Number" text="{WarrantyClaim>/ClaimNumber}"/>
				<m:ObjectAttribute title="Claim Type" text="{WarrantyClaim>/ClaimType}"/>
				<m:ObjectAttribute title="Submitted Date" text="{WarrantyClaim>/SubmittedOn}"/>
			</layout:VerticalLayout>
			<layout:VerticalLayout>
				<layout:layoutData>
					<ObjectPageHeaderLayoutData width="40%"/>
				</layout:layoutData>					
				<m:ObjectStatus 
					state="Success"
					text="{WarrantyClaim>/StatusDescription}" 
					icon="{WarrantyClaim>/StatusIcon}" 
				/>
				<m:ObjectNumber number="{WarrantyClaim>/TotalCostOfClaim}" unit="AUD" emphasized="true"/>
			</layout:VerticalLayout>
			<layout:VerticalLayout>
				<layout:layoutData>
					<ObjectPageHeaderLayoutData showSeparatorBefore="true" />
				</layout:layoutData>					
				<chart:ComparisonMicroChart size="M" >
					<chart:data>
						<chart:ComparisonMicroChartData title="Incoming Customer (IC)" value="{WarrantyClaim>/ICTotal}" color="Good"/>
						<chart:ComparisonMicroChartData	title="Outgoing Vendor (OV)" value="{WarrantyClaim>/OVTotal}" color="Good"/>
						<chart:ComparisonMicroChartData	title="Incoming Vendor (IV)" value="{WarrantyClaim>/IVTotal}" color="Good"/>
						<chart:ComparisonMicroChartData	title="Outgoing Customer (OC)" value="{WarrantyClaim>/OCTotal}" color="Good"/>
					</chart:data>
				</chart:ComparisonMicroChart>
			</layout:VerticalLayout>
			<layout:VerticalLayout class="sapUiNoMargin" width="100%" id="messageArea"/>
		</headerContent>
		<sections>
			<ObjectPageSection id="vehicleDetails" title="VEHICLE">
				<subSections>
					<ObjectPageSubSection id="vehicleDetails_sub1" title="VEHICLE" mode="Expanded">
						<blocks>
							<claimBlocks:VehicleDetailsBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection id="claimDetails" title="CLAIM">
				<subSections>
					<ObjectPageSubSection id="claimDetails_sub1" title="CLAIM" mode="Expanded">
						<blocks>
							<claimBlocks:ClaimDetailsBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection id="otherParts" title="PARTS">
				<subSections>
					<ObjectPageSubSection id="otherParts_sub1" title="PARTS" mode="Expanded">
						<blocks>
							<claimBlocks:OtherPartsDetailsBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection id="LON" title="LABOUR">
				<subSections>
					<ObjectPageSubSection id="LON_sub1" title="LABOUR" mode="Expanded">
						<blocks>
							<claimBlocks:LONDetailsBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection id="sublet" title="SUBLET">
				<subSections>
					<ObjectPageSubSection id="sublet_sub1" title="SUBLET" mode="Expanded">
						<blocks>
							<claimBlocks:SubletDetailsBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection id="customerConcern" title="CONCERN">
				<subSections>
					<ObjectPageSubSection id="customerConcern_sub1" title="CONCERN" mode="Expanded">
						<blocks>
							<claimBlocks:CustomerConcernBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection id="dealerComments" title="DEALER">
				<subSections>
					<ObjectPageSubSection id="dealerComments_sub1" title="DEALER" mode="Expanded">
						<blocks>
							<claimBlocks:DealerCommentsBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>				
			<ObjectPageSection id="hondaAssessmentResults" title="RESULTS">
				<subSections>
					<ObjectPageSubSection id="hondaAssessmentResults_sub1" title="RESULTS" mode="Expanded">
						<blocks>
							<claimBlocks:HondaAssessmentBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>			
		</sections>
		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button text="Save Draft" press="onDraft"/>
				<m:Button text="Cancel" press="onCancel"/>
				<m:Button text="Validate" press="onValidate"/>
				<m:Button text="Submit" press="onSubmit" type="Emphasized"/>
			</m:OverflowToolbar>
		</footer>
    </ObjectPageLayout>
</mvc:View>