<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" 
			xmlns:m="sap.m" xmlns:claimBlocks="WarrantyClaim_MockUp.block" xmlns:layout="sap.ui.layout"
			controllerName="WarrantyClaim_MockUp.controller.WarrantyClaimObjectPage"
			xmlns:chart="sap.suite.ui.microchart">
	<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" showTitleInHeaderContent="true" 
		showHeaderContent="true" busy="{WarrantClaimObjectPageView>/busy}" busyIndicatorDelay="{WarrantClaimObjectPageView>/delay}">
		<headerTitle>
			<ObjectPageHeader id="warrantyPageHeader"
							  objectTitle="Warranty Claim"
							  headerDesign="Light"
							  objectImageShape="Square"
							  objectImageURI="sap-icon://sales-quote"
							  isActionAreaAlwaysVisible="true"
							  isObjectIconAlwaysVisible="false"
							  isObjectTitleAlwaysVisible="false"
							  isObjectSubtitleAlwaysVisible="false"
							  showPlaceholder="true">				
				<actions>
					<ObjectPageHeaderActionButton icon="sap-icon://edit" text="edit" importance="Medium"/>
					<ObjectPageHeaderActionButton icon="sap-icon://save" text="save" visible="true"/>
					<ObjectPageHeaderActionButton icon="sap-icon://refresh" text="{buttons>/text}"/>
				</actions>
			</ObjectPageHeader>
		</headerTitle>		
		<headerContent>
			<layout:VerticalLayout width="100%">
				<m:ObjectAttribute title="Claim Number" text="{ClaimNumber}"/>
				<m:ObjectAttribute title="Claim Type" text="{ClaimType}"/>
				<m:ObjectAttribute title="Submitted Date" text="{SubmittedOn}"/>
				<m:ObjectNumber number="{TotalCostOfClaim}" unit="AUD" emphasized="true"/>
				<m:ObjectStatus text="Paid" state="Success" icon="sap-icon://paid-leave" />
			</layout:VerticalLayout>
			<layout:VerticalLayout>
				<chart:ComparisonMicroChart size="M" class="sapUiSmallMargin" press="press">
					<chart:data>
						<chart:ComparisonMicroChartData	title="From Claimant" value="143.80" color="Good"/>
						<chart:ComparisonMicroChartData	title="To Claimant" value="143.80" color="Good"/>
						<chart:ComparisonMicroChartData	title="To Reimburser" value="68.70 " color="Good"/>
					</chart:data>
				</chart:ComparisonMicroChart>
			</layout:VerticalLayout>
			<layout:VerticalLayout>
				<m:FlexBox width="6.25rem" height="6.25rem">
					<m:items>
						<chart:RadialMicroChart size="Responsive" percentage="79"/>
					</m:items>
				</m:FlexBox>
			</layout:VerticalLayout>
		</headerContent>
		<sections>
			<ObjectPageSection id="vehicleDetails" title="VEHICLE">
				<subSections>
					<ObjectPageSubSection id="vehicleDetails_sub1" title="VEHICLE" mode="Expanded">
						<blocks>
							<claimBlocks:VehicleDetailsBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection id="claimDetails" title="CLAIM">
				<subSections>
					<ObjectPageSubSection id="claimDetails_sub1" title="CLAIM" mode="Expanded">
						<blocks>
							<claimBlocks:ClaimDetailsBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection id="customerConcern" title="CONCERN">
				<subSections>
					<ObjectPageSubSection id="customerConcern_sub1" title="CONCERN" mode="Expanded">
						<blocks>
							<claimBlocks:CustomerConcernBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection id="dealerComments" title="DEALER">
				<subSections>
					<ObjectPageSubSection id="dealerComments_sub1" title="DEALER" mode="Expanded">
						<blocks>
							<claimBlocks:DealerCommentsBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>				
			<ObjectPageSection id="hondaAssessmentResults" title="RESULTS">
				<subSections>
					<ObjectPageSubSection id="hondaAssessmentResults_sub1" title="RESULTS" mode="Expanded">
						<blocks>
							<claimBlocks:HondaAssessmentBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>			
		</sections>
    </ObjectPageLayout>
</mvc:View>