<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" 
			xmlns:m="sap.m" xmlns:claimBlocks="WarrantyClaim_MockUp.block" xmlns:layout="sap.ui.layout">
	<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" showTitleInHeaderContent="true" showHeaderContent="true">
		<headerTitle>
			<ObjectPageHeader id="warrantyPageHeader"
							  objectTitle="Warranty Claim"
							  headerDesign="Light"
							  objectImageShape="Square"
							  objectImageURI="sap-icon://sales-quote"
							  isActionAreaAlwaysVisible="true"
							  isObjectIconAlwaysVisible="false"
							  isObjectTitleAlwaysVisible="false"
							  isObjectSubtitleAlwaysVisible="false"
							  showPlaceholder="true">				
				<actions>
					<ObjectPageHeaderActionButton icon="sap-icon://edit" text="edit" importance="Medium"/>
					<ObjectPageHeaderActionButton icon="sap-icon://save" text="save" visible="true"/>
					<ObjectPageHeaderActionButton icon="sap-icon://refresh" text="{buttons>/text}"/>
				</actions>
			</ObjectPageHeader>
		</headerTitle>		
		<headerContent>
			<layout:VerticalLayout >
				<m:ObjectAttribute title="Claim Number" text="1020344566"/>
				<m:ObjectAttribute title="Claim Type" text="Recall"/>
				<m:ObjectNumber number="450" unit="AUD" emphasized="true"/>
				<m:ObjectStatus text="Paid" state="Success" icon="sap-icon://paid-leave" />
			</layout:VerticalLayout>
		</headerContent>
		<sections>
			<ObjectPageSection id="vehicleDetails" title="VEHICLE">
				<subSections>
					<ObjectPageSubSection id="vehicleDetails_sub1" title="VEHICLE" mode="Expanded">
						<blocks>
							<claimBlocks:VehicleDetailsBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection id="claimDetails" title="CLAIM">
				<subSections>
					<ObjectPageSubSection id="claimDetails_sub1" title="CLAIM" mode="Expanded">
						<blocks>
							<claimBlocks:ClaimDetailsBlock/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>			
		</sections>
    </ObjectPageLayout>
</mvc:View>